#: import utils kivy.utils
<Button>
    font_size: 30
    background_normal:''
    background_color: (3/255.0,14/255.0,33/255.0,1)
    size_hint: (.2,.2)

<MyLayout>
    orientation: 'vertical'
    size: root.width , root.height
    TextInput:
        id: text_input
        multiline: False
        size_hint:(1,0.15)
        text: '0'
        halign: 'right'
        font_size: 35
        background_color: utils.get_color_from_hex('#0f0f1c')
        foreground_color: (1,1,1,1)

    GridLayout:
        cols: 4
        rows: 5
        Button:
            text: 'x'+'\u00b2'
            on_press: root.sqare()
        Button:
            text: 'C'
            on_press: root.clear()
        Button:
            text: '\u00ab'
            on_press: root.del_last()
        Button:
            text: '/'
            background_color: utils.get_color_from_hex('#0e398a')
            on_press: root.arithmatic_functions('/')
        Button:
            text: '7'
            on_press: root.num_press(7)
        Button:
            text: '8'
            on_press: root.num_press(8)
        Button:
            text: '9'
            on_press: root.num_press(9)
        Button:
            text: 'x'
            background_color: utils.get_color_from_hex('#0e398a')
            on_press: root.arithmatic_functions('*')
        Button:
            text: '4'
            on_press: root.num_press(4)
        Button:
            text: '5'
            on_press: root.num_press(5)
        Button:
            text: '6'
            on_press: root.num_press(6)
        Button:
            text: '-'
            background_color: utils.get_color_from_hex('#0e398a')
            on_press: root.arithmatic_functions('-')
        Button:
            text: '1'
            on_press: root.num_press(1)
        Button:
            text: '2'
            on_press: root.num_press(2)
        Button:
            text: '3'
            on_press: root.num_press(3)
        Button:
            text: '+'
            background_color: utils.get_color_from_hex('#0e398a')
            on_press: root.arithmatic_functions('+')
        Button:
            text: '+/-'
            on_press: root.posOrNeg()
        Button:
            text: '0'
            on_press: root.num_press(0)
        Button:
            text: '.'
            on_press: root.dot()
        Button:
            text: '='
            background_color: utils.get_color_from_hex('#0e398a')
            on_press: root.evaluate()
